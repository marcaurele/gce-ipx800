# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,py,md,rst}]
charset = utf-8

[*.py]
indent_style = space
indent_size = 4
max_line_length = 119

[*.json]
indent_style = space
indent_size = 2

[tests/*.json]
charset = latin1
end_of_line = crlf
insert_final_newline = false
trim_trailing_whitespace = false

